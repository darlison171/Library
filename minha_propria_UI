NexusUI.Name = "NexusHub"
NexusUI.ResetOnSpawn = false
NexusUI.Parent = game:GetService("CoreGui")

-- Bot√£o flutuante para abrir UI
OpenBtn.Name = "OpenBtn"
OpenBtn.Text = "‚öô"
